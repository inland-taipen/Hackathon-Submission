# Slack Clone - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# GitHub OAuth Configuration
# ==========================================
# Create a GitHub OAuth App at: https://github.com/settings/developers
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:3000/auth/callback?provider=github

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ==========================================
# Google OAuth Configuration
# ==========================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Authorized JavaScript origins: http://localhost:3000
# Authorized redirect URIs: http://localhost:3000/auth/callback?provider=google

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback?provider=google

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# ==========================================
# Production Configuration (Optional)
# ==========================================
# Uncomment and modify for production deployment

# GITHUB_CLIENT_ID=prod_github_client_id
# GITHUB_CLIENT_SECRET=prod_github_client_secret
# GOOGLE_CLIENT_ID=prod_google_client_id
# GOOGLE_CLIENT_SECRET=prod_google_client_secret
# GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback?provider=google
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

